export CATALINA_HOME={{ item.home }}
export CATALINA_BASE={{ item.base }}
export JRE_HOME={{ item.jdk }}
export CONTENT_ROOT="-Dtds.content.root.path={{ item.base }}/content"

export NORMAL="-d64 -Xmx{{ item.Xmx | default("2048m") }} -Xms{{ item.Xms | default("512m") }} -server -ea -XX:+HeapDumpOnOutOfMemoryError -Djava.awt.headless=true"
export JAVA_PREFS_ROOTS="-Djava.util.prefs.systemRoot=$CATALINA_BASE/content/thredds/javaUtilPrefs -Djava.util.prefs.userRoot=$CATALINA_BASE/content/thredds/javaUtilPrefs"

export CATALINA_OPTS="$NORMAL $CONTENT_ROOT $JAVA_PREFS_ROOTS"
export CATALINA_PID=$CATALINA_BASE/logs/catalina.pid
